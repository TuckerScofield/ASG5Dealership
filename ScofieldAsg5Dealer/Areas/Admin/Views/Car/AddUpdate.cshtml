@model Car
@{
    string title = ViewBag.Action + "Car";
    ViewBag.Title = title;
}

<h1>@ViewBag.Title</h1>

<form asp-action="Update" method="post">
    <div class="form-group">
        <label asp-for="MakeModel">Make/Model</label>
        <input asp-for="MakeModel" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Year">Year</label>
        <input asp-for="Year" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Mileage">Mileage</label>
        <input asp-for="Mileage" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Color">Color</label>
        <input asp-for="Color" class="form-control" />
    </div>

    <input type="hidden" asp-for="ID" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-action="List" class="btn btn-outline-secondary">Cancel</a>
</form>
